{
    "paths": {
        "topdir": "..",
        "agecsv": "config/ages.csv",
        "imgcsv": "config/subjects.csv",
        "outdir": "atlas",
        "tmpdir": "cache"
    },
    "images": {
        "default": "t2w",
        "ref": "global/avg/t2w.nii.gz",
        "t1w": {
            "prefix": "images/t1w/",
            "suffix": ".nii.gz",
            "interp": "linear",
            "bkgrnd": 0
        },
        "t2w": {
            "prefix": "images/t2w/",
            "suffix": ".nii.gz",
            "interp": "linear",
            "bkgrnd": 0
        },
        "tissues": {
            "prefix": "labels/tissues/",
            "suffix": ".nii.gz",
            "labels": "1..9",
            "interp": "nn"
        },
        "structures": {
            "prefix": "labels/structures/",
            "suffix": ".nii.gz",
            "labels": "1..87",
            "interp": "nn"
        }
    },
    "registration": {
        "affine": {
            "prefix": "global/dof/",
            "suffix": ".dof.gz"
        },
        "config": [
            {
                "model": "SVFFD",
                "energy": "sym",
                "channels": ["t2w"],
                "measures": {
                    "t2w": "NMI"
                },
                "interpolation": "Linear",
                "padding": false,
                "foreground": "Union",
                "window": "7 vox",
                "levels": 4,
                "resolution": 0.5,
                "blurring": {
                    "tissues": 2,
                    "structures": 2
                },
                "spacing": 2.0,
                "bending": 5e-3,
                "jacobian": 1e-5
            }
        ],
        "growth": {
            "enabled": true,
            "exclavg": false,
            "bchterms": 3
        }
    },
    "regression": {
        "means": [36, 40, 44],
        "sigma": [1.64, 0.64, 1.5],
        "epsilon": 0.01,
        "precision": 0
    },
    "evaluation": {
        "measures": {
            "t2w": ["grad", "gini"],
            "tissues": ["grad(2)"],
            "structures": ["label-consistency"]
        },
        "mask": "global/roi/brain/t{t:02.0f}.nii.gz",
        "rois": {
            "brain": "global/roi/brain/t{t:02.0f}.nii.gz",
            "l={l:02d}": ["{subdir}/structures/prob_{l:02d}/t{t:02.0f}.nii.gz", 87]
        }
    },
    "environment": {
        "queue": {
            "short": "condor",
            "long": "condor"
        },
        "mintasks": 1,
        "maxtasks": 500,
        "threads": 8,
        "condor": {
            "requirements": [
                "Arch == \"X86_64\"",
                "OpSysShortName == \"Ubuntu\"",
                "OpSysMajorVer >= 14"
            ],
            "environment": {
                "PYTHONPATH": ["/vol/biomedic/users/as12312/lib/python2.7/site-packages"]
            }
        }
    }
}
